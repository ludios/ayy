{
	"files": [
		"index.ts"
	],
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"useUnknownInCatchVariables": false,
		// Generate d.ts files
		"declaration": true,
	}
}
